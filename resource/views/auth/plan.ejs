<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/style-register.css" />
    <link rel="shortcut icon" href="../img/favicon.png" type="image/x-icon" />
    <title>Plans Classes Admin</title>
  </head>
  <body>
    <section>
      <header>
        <div class="header">
          <form action="/logout" method="post">
            <button
              href="/logout"
              class="btn_header"
              style="padding: 9px !important"
            >
              خروج
            </button>
          </form>
          <a type="submit" href="/auth/reporting" class="btn_header">
            گزارش گیری
          </a>
          <a type="submit" href="/teacher/planDays" class="btn_header">
            تعریف برنامه
          </a>
          <a
            type="submit"
            href="<%= auth.user.admin ? '/admin' : '/teacher' %>"
            class="btn_header"
          >
            صفحه اصلی
          </a>
        </div>
      </header>
    </section>

    <section class="body">
      <section class="main_body">
        <main class="main_form_register">
          <h1 class="head">تعریف برنامه</h1>
          <main class="back_form" id="back_form">
            <form class="form" method="POST" action="/auth/plan" novalidate>
              <%- include('../layouts/error-messages.ejs'); -%>

              <select id="days" name="days" class="inpt_select">
                <option disabled selected>روز های هفته</option>
                <option value="شنبه">شنبه</option>
                <option value="یک شنبه">یک شنبه</option>
                <option value="دوشنبه">دوشنبه</option>
                <option value="سه شنبه">سه شنبه</option>
                <option value="چهارشنبه">چهارشنبه</option>
                <option value="پنج شنبه">پنج شنبه</option>
                <option value="جمعه">جمعه</option>
              </select>

              <!-- <div class="inpt"> -->
              <select id="classId" name="classId" class="inpt_select">
                <option disabled selected>کد کلاس 1</option>
                <% if(className.length >= 0) { %> <% className.forEach(classes
                => { %>
                <option value="<%= classes %>"><%= classes %></option>
                <% }) %> <% } %>
              </select>
              <!-- <input  class="inout" type="text" name="classId" placeholder=" 1 کد کلاس " required>
                </div> -->

              <!-- <select id="field" name="field" class="inpt_select" >
                    <option disabled selected  > کد کلاس 2  </option>
                    <% if(className.length >= 0) { %> 
                        <% className.forEach(classes => { %>
                            <option value="<%= classes %>"> <%= classes %> </option>
                        <% }) %>
                    <% } %>
                </select> -->

              <!-- <div class="inpt">
                    <select id="classId2" name="classId2" class="inpt_select" >
                        <option disabled selected  > کد کلاس 1  </option>
                        
                    </select>
                    <input  class="inout" type="text" name="classId2" placeholder=" 2 کد کلاس " required>
                </div> -->
              <!-- 
                <div class="inpt">
                    <input  class="inout" type="text" name="classId3" placeholder=" 3 کد کلاس " required>
                </div>

                <div class="inpt">
                    <input  class="inout" type="text" name="classId4" placeholder=" 4 کد کلاس " required>
                </div>

                <div class="inpt">
                    <input  class="inout" type="text" name="classId5" placeholder=" 5 کد کلاس " required>
                </div>

                <div class="inpt">
                    <input  class="inout" type="text" name="classId6" placeholder=" 6 کد کلاس " required>
                </div> -->

              <select id="field" name="field" class="inpt_select">
                <option disabled selected>رشته و گرایش</option>
                <option value="کاردانی الکتروتکنیک">کاردانی الکتروتکنیک</option>
                <option value="کاردانی الکترونیک">کاردانی الکترونیک</option>
                <option
                  value="کاردانی تعمیر و نگهداری تجهیزات پزشکی و آزمایشگاهی"
                >
                  کاردانی تعمیر و نگهداری تجهیزات پزشکی و آزمایشگاهی
                </option>
                <option value="کاردانی نرم افزار">کاردانی نرم افزار</option>
                <option value="کاردانی سخت افزار">کاردانی سخت افزار</option>
                <option value="کاردانی فناوری اطلاعات">
                  کاردانی فناوری اطلاعات
                </option>
                <option value="کاردانی عمران">کاردانی عمران</option>
                <option value="کاردانی راهسازی">کاردانی راهسازی</option>
                <option value="کاردانی حسابداری">کاردانی حسابداری</option>
                <option value="کارشناسی ناپیوسته الکترونیک">
                  کارشناسی ناپیوسته الکترونیک
                </option>
                <option value="کارشناسی ناپیوسته نرم افزاری">
                  کارشناسی ناپیوسته نرم افزاری
                </option>
                <option value="کارشناسی ناپیوسته عمران">
                  کارشناسی ناپیوسته عمران
                </option>
              </select>

              <select name="lessonName" class="inpt_select">
                <option value="" disabled selected>نام درس مورد نظر</option>
                <% if(lessonses.length >= 0) { %> <% lessonses.forEach(lesson =>
                { %>
                <option value="<%= lesson %>"><%= lesson %></option>
                <% }) %> <% } %>
              </select>

              <select name="teacherName" class="inpt_select">
                <option value="" disabled selected>استاد مورد نظر</option>
                <% if(teachersAuth.length >= 0) { %> <%
                teachersAuth.forEach(Teach => { %>
                <option value="<%= Teach %>"><%= Teach %></option>
                <% }) %> <% } %>
              </select>

              <select name="termCode" class="inpt_select">
                <option value="" disabled selected>کد ترم</option>
                <% if(terms.length >= 0) { %> <% terms.forEach(term => { %>
                <option value="<%= Teach %>"><%= term %></option>
                <% }) %> <% } %>
              </select>

              <div>
                <button type="submit" class="buttom">ثبت</button>
              </div>
            </form>
          </main>
        </main>
      </section>
    </section>
